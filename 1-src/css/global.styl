.soc-media
	margin-bottom 1rem
	h3
		margin-bottom 1rem

.world
	h1
		margin-bottom 1rem
	.col.flex.wrap
		align-items: center
		min-width 320px
	.item
		display flex
		flex-direction column
		align-items: center
		h4, p
			text-align center
		h4
			line-height 1
			margin-bottom .5rem
		p
			line-height 1.33
			font-size .875rem
			margin-bottom .25rem
			max-width 340px
			margin-left auto
			margin-right auto
			&:last-of-type
				margin-bottom 0
				padding-bottom 0
		img
			max-height 192px
			width auto
			margin auto
			margin-bottom .5rem
			transition .7s
			opacity .5
		&:hover
			img
				opacity: 1
	.button.cc
		max-width: 440px
		.adena
			opacity 1
		.demon
			max-height 22rpx
			
	@media screen and (min-width $xs)
		h1
			margin-bottom .5rem
		.item
			margin-bottom 1rem
			margin-top 1rem
	@media screen and (min-width $md)
		.item
			margin-bottom 1.25rem
			margin-top 1.25rem
	@media screen and (min-width $lg)
		.item
			margin-bottom 1.5rem
			margin-top 1.5rem

