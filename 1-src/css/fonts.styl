h1,h2,h3,h4,h5,h6,p
	// font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
	font-family: Times New Roman, serif
	line-height 1

p
	font-size 18px
	line-height 1.33
	color: #f1f1f1
	margin-bottom .75rem

ul
	color: #f1f1f1
	li
		font-size 18px
	
.micro
	font-size .85rem
	// color #888
	color: #a7885b
	
.micro.gray
	color #aaa
	margin-bottom 0

h1,h2,h3,h4,h5,h6
	font-weight: 300
	color: white
	line-height 1.1

h1
	font-size 3rem

h2
	@media (min-width: $xs)
		font-size 6vw
	@media (min-width: $md)
		font-size 2.4rem
	
h3
	font-size 2rem

h4
	font-size 1.6rem
	line-height 1.25

.tc
	text-align center
	
.tl
	text-align left
	
.tr
	text-align right
	
i
	font-style italic
	
b
	font-weight: bold

em
	font-weight bold
	font-size .75rem
	text-transform: uppercase
	letter-spacing .1rem

.bold
	font-weight: bold
	
.italic
	font-style: italic

.cross
	text-decoration line-through
	color #666

.red
	// color #f60000
	color #d52929
